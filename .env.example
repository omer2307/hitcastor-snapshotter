NODE_ENV=development
PORT=3000
REGION=global

# Redis/BullMQ
REDIS_URL=redis://localhost:6379

# Postgres
PG_URL=postgres://user:pass@localhost:5432/hitcastor

# R2/S3 (S3-compatible)
OBJECT_STORE_ENDPOINT=https://<r2-or-s3-endpoint>
OBJECT_STORE_BUCKET=hitcastor-evidence
OBJECT_STORE_ACCESS_KEY=your_access_key
OBJECT_STORE_SECRET_KEY=your_secret_key
OBJECT_STORE_FORCE_PATH_STYLE=true
OBJECT_STORE_OBJECT_LOCK=true

# IPFS / Pinning (optional)
IPFS_ENDPOINT=https://api.pinata.cloud/psa
IPFS_TOKEN=your_ipfs_token

# Spotify Charts URL Template
SPOTIFY_CHARTS_URL_TEMPLATE=https://charts.spotify.com/api/charts/regional-${REGION}-daily/latest

# Retry Configuration
MAX_RETRY_HOURS=36
INITIAL_RETRY_DELAY_MS=300000

# Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url